<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/navigation_fl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <ImageView
                android:id="@+id/background_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.hyc.zhihu.widget.CircleImageView
                android:id="@+id/head_cv"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/name_tv"
                android:layout_below="@+id/head_cv"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/des_tv"
                android:layout_below="@+id/name_tv"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="50dp"
                    android:visibility="gone"
                    android:id="@+id/dairy_ll"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/dairy_iv"
                        android:layout_width="130dp"
                        android:layout_height="130dp"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"
                        android:text="小记"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/music_ll"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/music_iv"
                        android:layout_width="130dp"
                        android:layout_height="130dp"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"
                        android:text="歌单"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/article_rl"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/his_article"
                android:layout_marginLeft="10dp"
                android:text="ta的文章"
                android:textSize="17sp"
                android:textColor="@color/black_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_tv"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:background="@color/gray"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/black_tv"
            android:text="ta的收藏"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <RelativeLayout
            android:id="@+id/picture_rl"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/center_image_collection"
                android:layout_marginLeft="10dp"
                android:text="图文"
                android:textSize="17sp"
                android:textColor="@color/black_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_tv"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:id="@+id/reading_rl"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/center_reading_collection"
                android:layout_marginLeft="10dp"
                android:text="文章"
                android:textSize="17sp"
                android:textColor="@color/black_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_tv"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:id="@+id/movie_rl"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/center_movie_collection"
                android:layout_marginLeft="10dp"
                android:text="电影"
                android:textSize="17sp"
                android:textColor="@color/black_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_tv"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</ScrollView>
