<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.hyc.zhihu.widget.CircleImageView
            android:id="@+id/head_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/head_iv"
            android:textColor="@color/google_blue"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/head_iv"
            android:textColor="@color/gray_tv"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray_tv"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/laud"
            android:layout_toLeftOf="@id/num_tv"
            android:textColor="@color/gray_tv"/>
        <TextView
            android:id="@+id/score_tv"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:layout_toLeftOf="@id/iv"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:background="@color/gray"
        android:textColor="@color/black_tv"
        android:id="@+id/other_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"/>

    <TextView
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black_tv"
        android:textSize="16sp"
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
