<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterTransition">@android:transition/move</item>
        <item name="android:windowExitTransition">@android:transition/move</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--action bar color-->
        <item name="colorPrimary">@color/google_blue</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>

    </style>
    <style name="AppTheme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="AppTheme.Main1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/google_red</item>
        <item name="android:colorPrimary">@color/google_red</item>
        <item name="android:colorPrimaryDark">@color/google_red</item>
    </style>
    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--是否开启导航图标的旋转效果-->
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="AppTheme.Details" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- TODO: figure out if there is a way to use translucent status w/o the abrupt
             shift from black to translucent status bar while adding the status bar bg
             as a shared element. -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowEnterTransition">@transition/details_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/details_window_return_transition</item>
    </style>
    <style name="NavigationText">
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="OtherReadingText">
        <item name="android:textColor">@color/black_tv</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
